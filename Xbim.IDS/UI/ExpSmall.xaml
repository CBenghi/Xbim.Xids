<UserControl x:Class="Xbim.InformationSpecifications.UI.ExpSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xbim.InformationSpecifications.UI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
		<TextBox Height="23" Margin="5,5,40,5" TextWrapping="Wrap" 
				 Text="{Binding Need}"
				 />
		<Button Margin="5" Height="23" Width="30" HorizontalAlignment="Right" 
				Command="{Binding EditExpectationCommand}"
				/>

	</Grid>
</UserControl>
