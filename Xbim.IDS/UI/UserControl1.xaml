<UserControl x:Name="myRealUC" x:Class="Xbim.InformationSpecifications.UI.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xbim.InformationSpecifications.UI"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="200">
	<StackPanel Orientation="Horizontal">
		<TextBox Text="{Binding ElementName=myRealUC, Path=MyOwnDPIDeclaredInMyUc, Mode=TwoWay}"/>
		<Label x:Name="checkboxImage" Content="X" Foreground="red" />
		<Button Content="..." Click="Button_Click" />
	</StackPanel>
</UserControl>
